<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FunctionalButtons">
        <item name="android:minHeight">80sp</item>
        <item name="android:textColor">@color/colorFunctionTxt</item>
        <item name="android:textSize">40sp</item>
        <item name="android:background">@drawable/func_round_btn</item>

    </style>

    <style name="FunctionalButtons2">
        <item name="android:minHeight">80sp</item>
        <item name="android:textColor">@color/colorFunctionTxt2</item>
        <item name="android:textSize">40sp</item>
        <item name="android:background">@color/colorFunctionBG2</item>

    </style>

</resources>
