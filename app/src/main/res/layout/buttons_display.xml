<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="4"
    android:rowCount="5"
    >

    <Button
        android:id="@+id/btn7"
        android:text="7"
        style="@style/FunctionalButtons"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        />

    <Button
        android:id="@+id/btn8"
        android:text="8"
        style="@style/FunctionalButtons"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        />

    <Button
        android:id="@+id/btn9"
        android:text="9"
        style="@style/FunctionalButtons"
        android:layout_column="2"
        android:layout_row="0"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        />

    <Button
        android:id="@+id/btn4"
        android:text="4"
        style="@style/FunctionalButtons"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        />

    <Button
        android:id="@+id/btn5"
        android:text="5"
        style="@style/FunctionalButtons"
        android:layout_column="1"
        android:layout_row="1"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        />

    <Button
        android:id="@+id/btn6"
        android:text="6"
        style="@style/FunctionalButtons"
        android:layout_column="2"
        android:layout_row="1"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        />

    <Button
        android:id="@+id/btn1"
        android:text="1"
        style="@style/FunctionalButtons"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        />

    <Button
        android:id="@+id/btn2"
        android:text="2"
        style="@style/FunctionalButtons"
        android:layout_column="1"
        android:layout_row="2"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        />

    <Button
        android:id="@+id/btn3"
        android:text="3"
        style="@style/FunctionalButtons"
        android:layout_column="2"
        android:layout_row="2"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        />

    <Button
        android:id="@+id/btn_dot"
        android:text="."
        style="@style/FunctionalButtons"
        android:layout_column="0"
        android:layout_row="3"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        />

    <Button
        android:id="@+id/btn0"
        android:text="0"
        style="@style/FunctionalButtons"
        android:layout_column="1"
        android:layout_row="3"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        />

    <Button
        android:id="@+id/btn_percent"
        android:text="%"
        style="@style/FunctionalButtons"
        android:layout_column="2"
        android:layout_row="3"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        />

    <Button
        style="@style/FunctionalButtons2"
        android:text="DEL"
        android:layout_column="3"
        android:layout_row="0"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        />

    <Button
        style="@style/FunctionalButtons2"
        android:text="/"
        android:layout_columnWeight="1"
        android:layout_column="3"
        android:layout_row="1"
        android:layout_rowWeight="1"
        />

    <Button
        style="@style/FunctionalButtons2"
        android:text="X"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        />

    <Button
        style="@style/FunctionalButtons2"
        android:text="-"
        android:layout_columnWeight="1"
        android:layout_column="3"
        android:layout_row="3"
        android:layout_rowWeight="1"

        />

    <Button
        style="@style/FunctionalButtons2"
        android:text="+"
        android:layout_columnWeight="1"
        android:layout_column="3"
        android:layout_row="4"
        android:layout_rowWeight="1"
        />


    <Button
        style="@style/FunctionalButtons2"
        android:text="="
        android:layout_columnWeight="1"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_row="4"
        android:layout_rowWeight="1"
        />




</GridLayout>